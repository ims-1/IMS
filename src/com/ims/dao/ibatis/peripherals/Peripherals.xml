<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sqlmap-2.dtd">
<sqlMap namespace="Peripherals">
	<typeAlias alias="PeripheralClass" type="com.ims.model.peripherals.Peripherals" />

	<resultMap id="getPeripheralsMap" class="PeripheralClass">
		<result column="unit_no"         property="unitNo" />
		<result column="peripheral_no"   property="peripheralNo" />
		<result column="peripheral_type" property="peripheralType" />
		<result column="tag_number"      property="tagNumber" />
		<result column="acquired_date"   property="acquiredDate" />
		<result column="description"     property="description" />
		<result column="serial_no"       property="serialNo" />
		<result column="brand"           property="brand" />
		<result column="model"           property="model" />
		<result column="color"           property="color" />
		<result column="remarks"         property="remarks" />
		<result column="user_id"         property="userId" />
		<result column="last_update"     property="lastUpdate" />
	</resultMap>
	
	<resultMap id="getTotalPeripheralsMap" class="PeripheralClass">
		<result column="total"         property="total" />
	</resultMap>
	
	

	<select id="getPeripherals" resultMap="getPeripheralsMap" parameterClass="java.util.Map">
	SELECT unit_no, peripheral_no, peripheral_type, tag_number,
	acquired_date,
	description, serial_no, brand, model, color, remarks,
	user_id,
	last_update
	FROM ims_peripherals_1
	
